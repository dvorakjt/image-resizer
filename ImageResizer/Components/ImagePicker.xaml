<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImageResizer.Components.ImagePicker">
    <ContentView.GestureRecognizers>
        <TapGestureRecognizer Tapped="OnTapped"/>
        <DropGestureRecognizer DragOver="OnDragOver" Drop="OnDrop"></DropGestureRecognizer>
    </ContentView.GestureRecognizers>
    <Border Stroke="White" StrokeThickness="4">
        <FlexLayout WidthRequest="350" HeightRequest="350" Direction="Column" AlignItems="Center" JustifyContent="Center">
            <Image x:Name="Thumbnail" />
            <Label Text="Select An Image" FontSize="18" />
        </FlexLayout>
    </Border>
</ContentView>