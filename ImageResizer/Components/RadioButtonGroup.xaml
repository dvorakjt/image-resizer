<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImageResizer.Components.RadioButtonGroup"
             x:Name="RadioButtonGroupComponent"
             >
    <VerticalStackLayout>
        <Label Text="{Binding Source={x:Reference RadioButtonGroupComponent}, Path=LabelText}" HorizontalOptions="Center"/>
        <HorizontalStackLayout x:Name="RadioButtonGroupLayout"></HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>