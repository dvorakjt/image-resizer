<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImageResizer.FormGroups.Formats.FormatsFormGroup">
    <!-- 
      HeightRequest is required because the height of the contents will change but the height of this component should 
      not.
    -->
    <VerticalStackLayout
        x:Name="RootLayout"
        HorizontalOptions="Fill"
        Spacing="18" 
        >
        <Label Text="Image Formats" StyleClass="Heading" />
    </VerticalStackLayout>
</ContentView>