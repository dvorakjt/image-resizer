<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImageResizer.Views.QualityAndEffortInput"
             x:Name="QualityAndEffortInputComponent">
    <VerticalStackLayout >
        <Label 
            Text="{Binding Source={x:Reference QualityAndEffortInputComponent}, Path=LabelText}" 
            StyleClass="SubHeading" 
            Margin="0,0,0,10"
            />
        <HorizontalStackLayout x:Name="InputElementsContainer"></HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>