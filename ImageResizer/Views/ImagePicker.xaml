<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:ImageResizer.Views"
             x:Class="ImageResizer.Views.ImagePicker"
             x:Name="ImagePickerComponent">
    <VerticalStackLayout>
    <Border>
        <FlexLayout 
            Direction="Column" 
            AlignItems="Center" 
            JustifyContent="Center"
            x:Name="ImageContainer"
            >
            <FlexLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnTapped"/>
                <DropGestureRecognizer DragOver="OnDragOver" Drop="OnDrop"></DropGestureRecognizer>
            </FlexLayout.GestureRecognizers>
            <Image x:Name="Thumbnail" />
            <Label Text="Select An Image" FontSize="18" />
        </FlexLayout>
    </Border>
        <views:ErrorMessage
            IsVisible="{Binding Source={x:Reference ImagePickerComponent}, Path=IsErrorMessageVisible}" 
            Text="{Binding Source={x:Reference ImagePickerComponent}, Path=ErrorMessageText}" 
            />
    </VerticalStackLayout>
</ContentView>