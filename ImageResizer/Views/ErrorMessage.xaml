<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImageResizer.Views.ErrorMessage"
             x:Name="ErrorMessageComponent"
             MinimumHeightRequest="36"
             MaximumHeightRequest="36"
             >
    <Label 
        Text="{Binding Source={x:Reference ErrorMessageComponent}, Path=Text}" 
        IsVisible="{Binding Source={x:Reference ErrorMessageComponent}, Path=IsVisible}" 
        StyleClass="Error"
        />
</ContentView>