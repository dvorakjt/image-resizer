<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImageResizer.Views.CheckboxGroup"
             x:Name="CheckboxGroupComponent">
    <VerticalStackLayout>
        <Label Text="{Binding Source={x:Reference CheckboxGroupComponent}, Path=LabelText}" />
        <FlexLayout x:Name="CheckboxesLayout" Direction="Row" HorizontalOptions="Fill" JustifyContent="SpaceBetween"></FlexLayout>
    </VerticalStackLayout>
</ContentView>