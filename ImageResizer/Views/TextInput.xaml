<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:ImageResizer.Views"
             x:Class="ImageResizer.Views.TextInput"
             x:Name="TextInputComponent">
    <VerticalStackLayout>
        <Label Text="{Binding Source={x:Reference TextInputComponent}, Path=LabelText}" />
        <Border
            Stroke="{Binding Source={x:Reference TextInputComponent}, Path=BorderColor}"
            >
            <Entry 
                TextChanged="OnEntryTextChanged" 
                Text="{Binding Source={x:Reference TextInputComponent}, Path=Value}" 
                MaxLength="{Binding Source={x:Reference TextInputComponent}, Path=MaxLength}"
            />
        </Border>
        <views:ErrorMessage 
            IsVisible="{Binding Source={x:Reference TextInputComponent}, Path=IsErrorMessageVisible}"
            Text="{Binding Source={x:Reference TextInputComponent}, Path=ErrorMessageText}" 
            />
    </VerticalStackLayout>
</ContentView>