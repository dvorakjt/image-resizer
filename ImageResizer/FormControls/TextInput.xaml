<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImageResizer.FormControls.TextInput"
             x:Name="TextInputComponent">
    <VerticalStackLayout
        HorizontalOptions="Fill"
        x:Name="RootLayout"
        >
        <Border
            x:Name="Border"
            Padding="2, 0"
            Stroke="Black"
            >
        </Border>
        <StackLayout HeightRequest="13">
            <Label 
                x:Name="ErrorMessage"
                IsVisible="False"
                StyleClass="Error"
                />
        </StackLayout>
    </VerticalStackLayout>
</ContentView>