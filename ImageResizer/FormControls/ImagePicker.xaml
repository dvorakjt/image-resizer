<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImageResizer.FormControls.ImagePicker"
             >
    <Border x:Name="TheBorder">
        <FlexLayout 
            WidthRequest="438"
            HeightRequest="438"
            Direction="Column" 
            AlignItems="Center" 
            JustifyContent="Center"
            >
            <FlexLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnTapped"/>
                <DropGestureRecognizer DragOver="OnDragOver" Drop="OnDrop"></DropGestureRecognizer>
            </FlexLayout.GestureRecognizers>
            <Image 
                x:Name="TheThumbnail" 
                WidthRequest="438" 
                HeightRequest="438"
                Aspect="AspectFit" 
                IsVisible="False" 
                />
            <Label x:Name="TheLabel" Text="Select An Image" FontSize="26" />
        </FlexLayout>
    </Border>
</ContentView>