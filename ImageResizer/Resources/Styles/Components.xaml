<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style TargetType="Label" Class="Heading">
        <Setter Property="FontFamily" Value="IBMPlexSansBold" />
        <Setter Property="FontSize" Value="40" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>

    <Style TargetType="Label" Class="SubHeading">
        <Setter Property="FontFamily" Value="IBMPlexSansBold" />
        <Setter Property="FontSize" Value="28" />
    </Style>
    
    <Style TargetType="Label" Class="Error">
        <Setter Property="FontFamily" Value="IBMPlexSansRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="Red" />
    </Style>
</ResourceDictionary>