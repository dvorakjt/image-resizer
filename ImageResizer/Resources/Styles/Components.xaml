<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style TargetType="Label" Class="Heading">
        <Setter Property="FontFamily" Value="IBMPlexSansBold" />
        <Setter Property="FontSize" Value="40" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>

    <Style TargetType="Label" Class="SubHeading1">
        <Setter Property="FontFamily" Value="IBMPlexSansBold" />
        <Setter Property="FontSize" Value="28" />
        <Setter Property="Margin" Value="0,0,0,10" />
    </Style>
    
    <Style TargetType="Label" Class="SubHeading2">
        <Setter Property="FontFamily" Value="IBMPlexSansBold" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="Margin" Value="0,0,0,10" />
    </Style>
    
    <Style TargetType="Label" Class="Error">
        <Setter Property="FontFamily" Value="IBMPlexSansRegular" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="Red" />
    </Style>
    
    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="Black" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="2" />
        <Setter Property="FontFamily" Value="IBMPlexSansRegular" />
    </Style>
    
    <Style TargetType="Button" Class="Submit">
        <Setter Property="BackgroundColor" Value="ForestGreen" />
        <Setter Property="FontSize" Value="40" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="HorizontalOptions" Value="Fill" />
    </Style>
</ResourceDictionary>