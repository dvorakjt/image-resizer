<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="White"/>
        <Setter Property="Padding" Value="0"/>
    </Style>
    
    <Style TargetType="Entry">
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="FontFamily" Value="IBMPlexSansRegular"/>
        <Setter Property="FontSize" Value="14" />
        <Setter Property="HeightRequest" Value="30" />
        <Setter Property="TextColor" Value="Black" />
    </Style>
    
    <Style TargetType="Border">
        <Setter Property="Stroke" Value="Black" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="Rectangle" />
    </Style>
    
    <Style TargetType="Label">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="IBMPlexSansBold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="Black" />
    </Style>
    
    <Style TargetType="Label" Class="Heading">
        <Setter Property="FontFamily" Value="IBMPlexSansBold" />
        <Setter Property="FontSize" Value="32" />
    </Style>

    <Style TargetType="Label" Class="Subheading1">
        <Setter Property="FontFamily" Value="IBMPlexSansBold" />
        <Setter Property="FontSize" Value="24" />
    </Style>
    
    <Style TargetType="Label" Class="Subheading2">
        <Setter Property="FontFamily" Value="IBMPlexSansBold" />
        <Setter Property="FontSize" Value="18" />
    </Style>

    <Style TargetType="Label" Class="Error">
        <Setter Property="FontFamily" Value="IBMPlexSansRegular" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="TextColor" Value="Red" />
    </Style>
    
    <Style TargetType="Button">
        <Setter Property="BorderColor" Value="Black" />
        <Setter Property="BackgroundColor" Value="Black" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="2" />
        <Setter Property="FontFamily" Value="IBMPlexSansBold" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style TargetType="Button" Class="AddOrRemoveButton">
        <Setter Property="HeightRequest" Value="32" />
        <Setter Property="WidthRequest" Value="32" />
    </Style>
    
    <Style TargetType="Button" Class="SecondaryButton">
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="TextColor" Value="Black" />
    </Style>
    
    <Style TargetType="Button" Class="LargeButton">
        <Setter Property="HorizontalOptions" Value="Fill" />
        <Setter Property="HeightRequest" Value="84" />
        <Setter Property="BorderWidth" Value="2" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="FontSize" Value="32" />
    </Style>
</ResourceDictionary>