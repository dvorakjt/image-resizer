<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="White"/>
        <Setter Property="Padding" Value="0"/>
    </Style>
    
    <Style TargetType="Label">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="IBMPlexSansSemiBold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="HeightRequest" Value="18" />
        <Setter Property="TextColor" Value="Black" />
    </Style>
    
    <Style TargetType="Entry">
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="FontFamily" Value="IBMPlexSansRegular"/>
        <Setter Property="FontSize" Value="14" />
        <Setter Property="HeightRequest" Value="32" />
        <Setter Property="TextColor" Value="Black" />
    </Style>
    
    <Style TargetType="Border">
        <Setter Property="Stroke" Value="Black" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeShape" Value="Rectangle" />
    </Style>

    <Style TargetType="Label" Class="Heading">
        <Setter Property="FontFamily" Value="IBMPlexSansBold" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="HeightRequest" Value="29" />
    </Style>
    
    <Style TargetType="Label" Class="Subheading">
        <Setter Property="FontFamily" Value="IBMPlexSansBold" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="HeightRequest" Value="23" />
    </Style>
    
    <Style TargetType="Label" Class="Error">
        <Setter Property="FontFamily" Value="IBMPlexSansRegular" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="HeightRequest" Value="13" />
        <Setter Property="TextColor" Value="Red" />
    </Style>
</ResourceDictionary>